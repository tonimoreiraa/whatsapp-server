<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>WhatsApp Scan</title>
  <style>
        body {
            font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        h1 {
            margin-bottom: 20px;
        }

        #qrcode {
            width: 500px;
            height: 500px;
        }
  </style>
  <script src="https://cdn.rawgit.com/davidshimjs/qrcodejs/gh-pages/qrcode.min.js"></script>
</head>
<body>
  <div class="container">
    <h1>Escaneie o QR Code</h1>
    <h2>Conecte seu WhatsApp</h2>
    <div id="qrcode"></div>
  </div>
  <script>
    // Função para fazer a chamada à API e obter o código
    async function getCodeFromAPI() {
        try {
            const response = await fetch('http://localhost:3333/code');
            const data = await response.json();
            return data.code;
        } catch (error) {
            console.error('Erro ao obter o código:', error);
            return null;
        }
    }

    // Função para gerar o QR Code usando a biblioteca QRCode.js
    function generateQRCode(code) {
        const qrcodeDiv = document.getElementById('qrcode');
        if (!qrcodeDiv) return;

        const qrcode = new QRCode(qrcodeDiv, {
            text: code,
            width: 500,
            height: 500,
        });
    }

    // Função de inicialização da página
    async function init() {
        const code = await getCodeFromAPI();
        if (code) {
            generateQRCode(code);
        } else {
            // Caso ocorra um erro ao obter o código, exibe uma mensagem de erro.
            const qrcodeDiv = document.getElementById('qrcode');
            qrcodeDiv.innerHTML = 'Erro ao obter o código.';
        }
    }

    // Inicializa a página
    init();
    setInterval(init, 10000)


  </script>
</body>
</html>
